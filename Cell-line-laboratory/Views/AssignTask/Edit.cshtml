@model Cell_line_laboratory.Entities.AssignTask

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AssignTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="User" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="selectpicker" multiple="multiple">
                    @foreach (var item in ViewBag.AllUsers)
                    {
                        <option value="@item.Id" data-subtext="@item.Id">@item.Name (@item.Email)</option>

                    }
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Designation" class="control-label"></label>
                <input asp-for="Designation" class="form-control" />
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="AssignedBy" class="control-label"></label>
                <input asp-for="AssignedBy" class="form-control" readonly />
                <span asp-validation-for="AssignedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

