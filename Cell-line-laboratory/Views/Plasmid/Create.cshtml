@model Cell_line_laboratory.Models.PlasmidModel

<h2>Create Plasmid</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PlasmidCode"></label>
        <input asp-for="PlasmidCode" class="form-control" />
        <span asp-validation-for="PlasmidCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PlasmidName"></label>
        <input asp-for="PlasmidName" class="form-control" />
        <span asp-validation-for="PlasmidName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Origin"></label>
        <input asp-for="Origin" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PlasmidMapLink"></label>
        <input asp-for="PlasmidMapLink" class="form-control" />
        <span asp-validation-for="PlasmidMapLink" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Note"></label>
        <textarea asp-for="Note" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
